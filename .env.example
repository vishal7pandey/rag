# OpenAI Configuration
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_ORG_ID=org-your-org-id-here

# Embedding Configuration
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_BATCH_SIZE=100

# Generation Configuration
OPENAI_GENERATION_MODEL=gpt-5-nano
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_OUTPUT_TOKENS=1000

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-east-1-aws


# Database Configuration
# Default local connection string; adjust user/password/db as needed.
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ragdb


# Redis Configuration
REDIS_URL=redis://redis:6379


# LangSmith Configuration
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_PROJECT=rag-system


# Security
JWT_SECRET=your-secret-key-change-in-production


# Application Settings
ENVIRONMENT=dev
DEBUG=true
LOG_LEVEL=INFO


# Debugging & Evaluation (Story 016)
# Enable detailed artifact logging for /api/query when set to "true".
DEBUG_RAG=false
# Optional bearer token to secure /api/debug/artifacts. Leave empty for local dev
# without auth; set a strong value in shared or prod environments.
DEBUG_ARTIFACTS_TOKEN=
